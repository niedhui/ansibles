server {
  listen 80 default_server;
  listen [::]:80 default_server;

  index index.html;

  server_name {{app_server_name}};

  root {{ app_root_path}};

  auth_basic "Admin Zone";
  auth_basic_user_file /etc/nginx/htpasswd;

  location / {
    proxy_set_header Host $host;
    proxy_pass http://127.0.0.1:{{app_port}};
  }

#  location / {
